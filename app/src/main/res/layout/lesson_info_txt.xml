<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:background="@drawable/bg_gradient"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="153dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/digipic_logo"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginTop="-30dp"
            android:layout_marginBottom="-30dp"
            android:translationX="-15dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/notifications"
            android:src="@drawable/ic_notif"
            android:scaleType="centerInside"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <!-- Progress indicator while loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Module Type Header -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic Photography"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#5B2C2F"
                android:layout_marginTop="16dp" />

            <!-- Tab Buttons -->
            <LinearLayout
                android:id="@+id/tabButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/tabText"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@drawable/tab_selected"
                    android:gravity="center"
                    app:backgroundTint="@null"
                    android:minWidth="64dp"
                    android:paddingHorizontal="20dp"
                    android:text="TEXT"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/tabVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#EEEEEE"
                    android:gravity="center"
                    android:minWidth="64dp"
                    android:paddingHorizontal="20dp"
                    android:text="VIDEO"
                    android:textColor="#7A3B32"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/quizBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#EEEEEE"
                    android:gravity="center"
                    android:minWidth="64dp"
                    android:paddingHorizontal="20dp"
                    android:text="QUIZ"
                    android:textColor="#7A3B32"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Section Title -->
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High Angle Shot"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#5B2C2F"
                android:layout_marginTop="24dp" />

            <!-- Section Content -->
            <TextView
                android:id="@+id/textContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A high-angle shot is a cinematic technique..."
                android:justificationMode="inter_word"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:textColor="#7A3B32"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="24dp" />

            <!-- *** New container for all attachments *** -->
            <LinearLayout
                android:id="@+id/attachmentsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="16dp"/>

            <!-- Mark Completed Button -->
            <Button
                android:id="@+id/btnMarkCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark as Completed"
                android:textColor="#FFFFFF"
                android:backgroundTint="#6B0000"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bottom_nav"
        android:elevation="6dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="5">

        <ImageView
            android:id="@+id/navHome"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_home"
            android:contentDescription="@string/home"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/mainGallery"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_challenges"
            android:contentDescription="@string/challenges"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/navLessons"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_gallery"
            android:contentDescription="@string/gallery"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/navProfile"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_profile"
            android:contentDescription="@string/profile"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/navSettings"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_settings"
            android:contentDescription="@string/settings"
            android:padding="8dp" />
    </LinearLayout>

</LinearLayout>
