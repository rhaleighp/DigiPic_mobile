<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- DigiPic Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="481dp"
        android:layout_height="207dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="DigiPic Logo"
        android:src="@drawable/digipic_logo" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Verification"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A verification link has been sent to your email."
        android:textColor="#DDDDDD"
        android:textSize="14sp"
        android:layout_marginBottom="32dp"
        android:textAlignment="center" />

    <!-- Resend / Check Buttons -->
    <Button
        android:id="@+id/btnResend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundTint="@null"
        android:background="@drawable/button_gradient"
        android:text="Resend Verification Email"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnCheckVerification"
        android:layout_width="match_parent"
        android:background="@drawable/button_gradient"
        app:backgroundTint="@null"
        android:layout_height="wrap_content"
        android:text="I Have Verified" />

</LinearLayout>
