<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="24dp"
        android:gravity="center_horizontal">

        <!-- Sign Up Header Image -->
        <ImageView
            android:layout_width="226dp"
            android:layout_height="57dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="32dp"
            android:contentDescription="@string/sign_up"
            android:src="@drawable/signup_text" />

        <!-- Username -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textColor="#FFFFFF"
            android:layout_gravity="start"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext"
            android:hint="username"
            android:inputType="textPersonName"
            android:autofillHints="givenName"
            android:importantForAccessibility="no"
            android:layout_marginBottom="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000000"
            android:textColorHint="#99000000" />

        <!-- First Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            android:textColor="#FFFFFF"
            android:layout_gravity="start"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/first_name_hint"
            android:inputType="textPersonName"
            android:autofillHints="givenName"
            android:importantForAccessibility="no"
            android:layout_marginBottom="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000000"
            android:textColorHint="#99000000" />

        <!-- Middle Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/middle_name"
            android:textColor="#FFFFFF"
            android:layout_gravity="start"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/etMiddleName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/middle_name_hint"
            android:inputType="textPersonName"
            android:autofillHints="middleName"
            android:importantForAccessibility="no"
            android:layout_marginBottom="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000000"
            android:textColorHint="#99000000" />

        <!-- Last Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_name"
            android:layout_gravity="start"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/last_name_hint"
            android:inputType="textPersonName"
            android:autofillHints="familyName"
            android:importantForAccessibility="no"
            android:layout_marginBottom="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000000"
            android:textColorHint="#99000000" />

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:layout_gravity="start"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress"
            android:importantForAccessibility="no"
            android:layout_marginBottom="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000000"
            android:textColorHint="#99000000" />

        <!-- Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:layout_gravity="start"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:importantForAccessibility="no"
            android:layout_marginBottom="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000000"
            android:textColorHint="#99000000" />

        <!-- Confirm Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_password"
            android:layout_gravity="start"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/confirm_password_hint"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:importantForAccessibility="no"
            android:drawableEnd="@drawable/ic_visibility_off"
            android:drawablePadding="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="20dp"
            android:textColor="#000000"
            android:textColorHint="#99000000" />

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/sign_up"
            android:background="@drawable/button_gradient"
            app:backgroundTint="@null"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Already have account? Log in -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvAlreadyHaveAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_have_account"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvLoginClickable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:text="@string/log_in"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
