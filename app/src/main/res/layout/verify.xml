<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Larger Header Spacer -->

    <!-- Title -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="481dp"
        android:layout_height="207dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="DigiPic Logo"
        android:src="@drawable/digipic_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Verification"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp" />

    <!-- Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the 6-digit code sent to your email"
        android:textColor="#DDDDDD"
        android:textSize="14sp"
        android:layout_marginBottom="32dp" />

    <!-- OTP Boxes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="6"
        android:layout_marginBottom="24dp">

        <EditText
            android:id="@+id/otp1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:gravity="center"
            android:background="@drawable/rounded_edittext"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:autofillHints="oneTimeCode"
            android:hint="•" />

        <EditText
            android:id="@+id/otp2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:gravity="center"
            android:background="@drawable/rounded_edittext"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:autofillHints="oneTimeCode"
            android:hint="•" />

        <EditText
            android:id="@+id/otp3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:gravity="center"
            android:background="@drawable/rounded_edittext"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:autofillHints="oneTimeCode"
            android:hint="•" />

        <EditText
            android:id="@+id/otp4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:gravity="center"
            android:background="@drawable/rounded_edittext"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:autofillHints="oneTimeCode"
            android:hint="•" />

        <EditText
            android:id="@+id/otp5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:gravity="center"
            android:background="@drawable/rounded_edittext"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:autofillHints="oneTimeCode"
            android:hint="•" />

        <EditText
            android:id="@+id/otp6"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:gravity="center"
            android:background="@drawable/rounded_edittext"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:autofillHints="oneTimeCode"
            android:hint="•" />
    </LinearLayout>


    <!-- Resend Text -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvReceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't receive code?"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvResend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Resend"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
