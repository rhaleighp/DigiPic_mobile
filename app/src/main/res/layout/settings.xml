<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_gradient"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="153dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/digipic_logo"
            android:translationX="-15dp"
            android:translationY="0dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/notifications"
            android:src="@drawable/bckbtn" />
    </LinearLayout>

    <!-- Settings Content -->
    <ScrollView
        android:layout_below="@id/topHeader"
        android:layout_above="@id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#6B0000"
                android:layout_marginBottom="16dp" />

            <!-- GENERAL SECTION -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/general"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_gradient"
                android:layout_marginBottom="8dp"
                android:textSize="14sp" />

            <!-- Settings Items -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="@string/account"
                android:textColor="#000000"
                android:drawableEnd="@drawable/ic_arrow"
                android:drawablePadding="12dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="@string/notification"
                android:textColor="#000000"
                android:drawableEnd="@drawable/ic_arrow"
                android:drawablePadding="12dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="@string/delete_account"
                android:textColor="#000000"
                android:drawableEnd="@drawable/ic_arrow"
                android:drawablePadding="12dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="12sp" />

            <!-- Sound Switch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sounds"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <Switch
                    android:id="@+id/switchSounds"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:thumbTint="#6B0000"
                    android:trackTint="#E0E0E0" />
            </LinearLayout>

            <!-- Music Switch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/music"
                    android:textColor="#000000"
                    android:textSize="12sp" />


            </LinearLayout>

            <!-- FEEDBACK SECTION -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/feedback"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_gradient"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:textSize="14sp" />

            <!-- Feedback Items -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="@string/report_bug"
                android:textColor="#000000"
                android:drawableEnd="@drawable/ic_arrow"
                android:drawablePadding="12dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="@string/send_feedback"
                android:textColor="#000000"
                android:drawableEnd="@drawable/ic_arrow"
                android:drawablePadding="12dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="@string/faq"
                android:textColor="#000000"
                android:drawableEnd="@drawable/ic_arrow"
                android:drawablePadding="12dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="12sp" />

            <!-- Logout Button -->
            <Button
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:text="@string/log_out"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/button_gradient" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:background="@drawable/bottom_nav"
        android:elevation="6dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="5">

        <ImageView
            android:id="@+id/navHome"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_home"
            android:contentDescription="@string/home"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/mainGallery"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_challenges"
            android:contentDescription="@string/challenges"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/navLessons"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_gallery"
            android:contentDescription="@string/gallery"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/navProfile"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_profile"
            android:contentDescription="@string/profile"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/navSettings"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_settings"
            android:contentDescription="@string/settings"
            android:padding="8dp" />
    </LinearLayout>
</LinearLayout>